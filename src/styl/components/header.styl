@import "common"


.header {
	position: relative;
	padding-bottom: 120px
	width: 100%;
	height: 100%;
	overflow: hidden
	color: #ffffff
	a {
		color: #ffffff
	}
	&:before {
		content: '';
		position: absolute;
		z-index: 1;
		top: 0;
		right: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, .3);
	}
	.container {
		position: relative
		z-index: 10
	}
}

.header, .header_video {
	min-width: 100%;
	min-height: 100vh;
	overflow: hidden
}

.header_video {
	position: absolute;
	z-index: 0;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	background: url(/img/header-bg.jpg) center;
	background-size: cover;
}


.header_top {
	//margin-bottom: 140px;
	margin-bottom: vh;
	&__menu {
		height: 60px
		li {
			height: 100%
			a {
				position: relative
				display: flex
				align-items: center
				padding: 0 8px 0 8px
				height: 100%
				font-family: latoblack
				&:before {
					content: ''
					position: absolute
					right: 8px
					bottom: 13px
					height: 3px
					width: calc(100% - 16px)
				}
				&:hover {
					&:before {
						border-bottom: 3px solid #d99287
					}
				}
			}
			&:first-child {
				a {
					padding: 0 8px 0 16px
					&:before {
						right:8px
						width: calc(100% - 24px)
					}
				}
			}
			&:last-child {
				a {
					padding: 0 16px 0 8px
					&:before {
						right:16px
						width: calc(100% - 24px)
					}
				}
			}
		}
	}
	&__call {
		padding-bottom: 12px
		.call-tel {
			padding: 8px 14px 5px 14px
			font-family: latoblack
			font-size: 29px
		}
		.call-btn {
			text-decoration: underline
			cursor: pointer
			font-family: Lato-Hairline
			&:hover {
				text-decoration: none
			}
		}
	}
}

.header h1 {
	margin-bottom: 22px
	padding: 0 0 16px 0
	font-family: latobold
	.transpBox {
		padding: 0 33px 6px 55px
		&:before {
			top: 10px
		}
	}
}
.header .subtitle {
	font-family: latoblack
	font-size: 29px
	margin-bottom: 20px
	padding: 20px 35px 25px 0
	.transpBox {
		padding: 20px 35px 25px 0
		left: -30px
	}
}

.header_middle__menu {
	padding: 25px 0 35px 0
	max-width: 680px
	&:before {
		background: #00b3ba
	}
	li {
		padding: 0 15px 0 15px
		a {
			font-family: latolight
			font-size: 20px
			line-height: 33px
			&:hover {
				span {
					text-decoration: none
				}
			}
			span {
				font-family: latoblack
				text-decoration: underline
			}
		}
	}
}

.arrowDown {
	position: absolute
	z-index: 10
	display: block
	bottom: 15px
	left: 50%
	transform: translateX(-38px)
	width: 79px
	height: 79px
	background: url(/img/arrow-down.png) no-repeat
}