.download {
	padding-top: 105px
	min-height: 416px
	background: url(/img/download.jpg) center no-repeat
	h2 {
		margin-bottom: 25px
		font-family: latoblack
		font-size: 42px
		line-height: 40px
		color: #798897
		span {
			font-family: Lato-Hairline
			font-size: 29px
		}
	}


	.btn-wrap {
		display: flex
		align-items: center
		margin-bottom: 24px
		padding-left: 15px
		width: 357px
		height: 42px
		font-family: latomedium
		font-size: 20px
		color: #798897
		border: 1px solid #99a9b6
		border-radius: 16px
		b {
			font-family: latoblack
		}
		a {
			position: relative
			margin-right: -6px
			padding-left: 32px
			width: 166px
			height: 49px
			font-family: latolight
			font-size: 16px
			line-height: 49px
			color: #ffffff
			background-image: -moz-linear-gradient( 0deg, rgb(157,206,86) 0%, rgb(29,167,199) 100%);
			background-image: -webkit-linear-gradient( 0deg, rgb(157,206,86) 0%, rgb(29,167,199) 100%);
			background-image: -ms-linear-gradient( 0deg, rgb(157,206,86) 0%, rgb(29,167,199) 100%);
			border-radius: 100px
			&:after {
				content: ''
				position: absolute
				right: 5px
				width: 42px
				height: 42px
				background: url(/img/btn-arrow.png)
				top: 50%
				transform: translateY(-50%)
			}
		}
	}

	&_remark {
		font-family: latolight
		color: #798897
	}
}


@media (max-width: 400px) {
    .download {
		padding-bottom: 50px
	    background-size: 700%
		.btn-wrap {
			flex-direction: column
			margin-bottom: 40px
			height: 75px
			width: 100%
			span {
				margin: 12px 0 12px 0
			}
		}
    }
}